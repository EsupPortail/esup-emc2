                                </a>
                            <?php endif; ?>
                        <?php endif; ?>
                        <?php if ($canSupprimer) : ?>
                            <br>
                            <?php /** @see Formation\Controller\InscriptionController::supprimerAction() */ ?>
                            <a href="<?php echo $this->url('formation/inscription/supprimer', ['inscription' => $inscription->getId()], [], true); ?>"
