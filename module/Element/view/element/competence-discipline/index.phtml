                            <?php /** @see \Element\Controller\CompetenceDisciplineController::historiserAction() */ ?>
                            <a href="<?php echo $this->url('element/competence-discipline/historiser', ['competence-discipline' => $discipline->getId()], [], true); ?>"
                               class="action warning">
                                <span class="icon icon-historiser"></span>
                                Historiser
                            </a>
                        <?php else : ?>
                            <?php /** @see \Element\Controller\CompetenceDisciplineController::restaurerAction() */ ?>
                            <a href="<?php echo $this->url('element/competence-discipline/restaurer', ['competence-discipline' => $discipline->getId()], [], true); ?>"
                               class="action warning">
                                <span class="icon icon-restaurer"></span>
                                Restaurer
                            </a>
                        <?php endif; ?>
                    <?php endif; ?>
                    <?php if ($canDetruire) : ?>
                        <br>
                        <?php /** @see \Element\Controller\CompetenceDisciplineController::detruireAction() */ ?>
                        <a href="<?php echo $this->url('element/competence-discipline/detruire', ['competence-discipline' => $discipline->getId()], [], true); ?>"
