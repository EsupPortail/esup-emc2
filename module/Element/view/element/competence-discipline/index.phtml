    <tr>
        <th> Libellé</th>
        <th> #Compétence</th>
        <th class="action"> Action</th>
    </tr>
    </thead>
    <tbody>
    <?php foreach ($disciplines as $discipline) : ?>
        <tr class="<?php if ($discipline->estHistorise()) echo " historise "; ?>">
            <td> <?php echo $discipline->getLibelle(); ?> </td>
            <td> <?php echo count($discipline->getCompetences()); ?> </td>
            <?php if ($canAction) : ?>
                <td class="action">
                    <?php if ($canAfficher) : ?>
                        <?php /** @see \Element\Controller\CompetenceDisciplineController::afficherAction() */ ?>
                        <a href="<?php echo $this->url('element/competence-discipline/afficher', ['competence-discipline' => $discipline->getId()], [], true); ?>"
                           class="ajax-modal action secondary">
                            <span class="icon icon-voir"></span>
                            Afficher
                        </a>
                    <?php endif; ?>
                    <?php if ($canModifier) : ?>
                        <br>
                        <?php /** @see \Element\Controller\CompetenceDisciplineController::modifierAction() */ ?>
                        <a href="<?php echo $this->url('element/competence-discipline/modifier', ['competence-discipline' => $discipline->getId()], [], true); ?>"
                           class="ajax-modal  action primary" data-event="modification">
                            <span class="icon icon-editer"></span>
                            Modifier
                        </a>
                    <?php endif; ?>
                    <?php if ($canHistoriser): ?>
                        <br>
