<?php

/**
 * @see  \UnicaenNote\Controller\NoteController::indexAction()
 * @var Note[] $notes
 */

use UnicaenNote\Entity\Db\Note;
use UnicaenNote\Provider\Privilege\NotePrivileges;

$this->headTitle("Index des portes-notes");

$canAfficher = $this->isAllowed(NotePrivileges::getResourceId(NotePrivileges::NOTE_AFFICHER));
$canAjouter = $this->isAllowed(NotePrivileges::getResourceId(NotePrivileges::NOTE_AJOUTER));
$canModifier = $this->isAllowed(NotePrivileges::getResourceId(NotePrivileges::NOTE_MODIFIER));
$canHistoriser = $this->isAllowed(NotePrivileges::getResourceId(NotePrivileges::NOTE_HISTORISER));
$canSupprimer = $this->isAllowed(NotePrivileges::getResourceId(NotePrivileges::NOTE_SUPPRIMER));

?>

<h1 class="page-header">
    Index des notes
</h1>

<div class="main">

    <?php if ($canAjouter) : ?>
        <?php /** @see \UnicaenNote\Controller\NoteController::ajouterAction() */?>
        <a href="<?php echo $this->url('unicaen-note/note/ajouter', [], [], true); ?>"
           class="btn btn-primary ajax-modal action" data-event="modification"
        >
            <span class="icon ajouter"></span>
            Ajouter une note
        </a>

        <br/><br/>
    <?php endif; ?>

    <table class="datatable table table-condensed">
        <thead>
            <tr>
                <th> Id </th>
                <th> Porte-notes </th>
                <th> Type </th>
                <th> Texte </th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($notes as $note) : ?>
                <tr <?php if ($note->estHistorise()) echo "class='historise';"?>>
                    <td> <?php echo $note->getId(); ?> </td>
                    <td> <?php echo $note->getPortenote()->getId(); ?> </td>
                    <td> <?php echo ($note->getType())?$note->getType()->getLibelle():"Auncun"; ?> </td>
                    <td>
                        <?php echo mb_strcut($note->getTexte(), 0, 20); ?>
                        <?php if (strlen($note->getTexte()) > 20) echo "..."; ?>
                    </td>
                    <td>
                        <?php if ($canAfficher): ?>
                            <?php /** @see \UnicaenNote\Controller\NoteController::afficherAction() */?>
                            <a href="<?php echo $this->url('unicaen-note/note/afficher', ['note' => $note->getId()], [], true); ?>"
                               class="ajax-modal"
                               title="Afficher la note <?php echo $note->getId(); ?>" data-toggle="tooltip" data-html="true"
                            >
                                <span class="icon voir"></span></a>
                        <?php endif; ?>
                        <?php if ($canModifier): ?>
                            <?php /** @see \UnicaenNote\Controller\NoteController::modifierAction() */?>
                            <a href="<?php echo $this->url('unicaen-note/note/modifier', ['note' => $note->getId()], [], true); ?>"
                               class="ajax-modal" data-event="modification"
                               title="Modifier la note <?php echo $note->getId(); ?>" data-toggle="tooltip" data-html="true"
                            >
                                <span class="icon editer"></span></a>
                        <?php endif; ?>
                        <?php if ($canHistoriser): ?>
                            <?php if ($note->estNonHistorise()) : ?>
                                <?php /** @see \UnicaenNote\Controller\NoteController::historiserAction() */?>
                                <a href="<?php echo $this->url('unicaen-note/note/historiser', ['note' => $note->getId()], [], true); ?>"
                                   title="Historiser la note <?php echo $note->getId(); ?>" data-toggle="tooltip" data-html="true"
                                >
                                    <span class="icon historiser"></span></a>
                            <?php else: ?>
                                <?php /** @see \UnicaenNote\Controller\NoteController::restaurerAction() */?>
                                <a href="<?php echo $this->url('unicaen-note/note/restaurer', ['note' => $note->getId()], [], true); ?>"
                                   title="Restaurer la note <?php echo $note->getId(); ?>" data-toggle="tooltip" data-html="true"
                                >
                                    <span class="icon restaurer"></span></a>
                            <?php endif; ?>
                        <?php endif; ?>
                        <?php if ($canSupprimer): ?>
                            <?php /** @see \UnicaenNote\Controller\NoteController::supprimerAction() */?>
                            <a href="<?php echo $this->url('unicaen-note/note/supprimer', ['note' => $note->getId()], [], true); ?>"
                               class="ajax-modal" data-event="modification"
                               title="Supprimer la note <?php echo $note->getId(); ?>" data-toggle="tooltip" data-html="true"
                            >
                                <span class="icon detruire"></span></a>
                        <?php endif; ?>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
</div>


<script>
    $(function() {
        $("body").on("modification", function (event) {
            event.div.modal('hide');
            window.location.reload();
        });
    });
</script>