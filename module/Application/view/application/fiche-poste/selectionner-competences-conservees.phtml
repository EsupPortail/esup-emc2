use Application\Entity\Db\FicheposteCompetenceConservee;

/**
 * @param FicheposteCompetenceConservee[] $conservees
 * @param Competence $competence
 * @return boolean
 */
function isIn($conservees, $competence) {
    foreach ($conservees as $conservee) {
        if ($conservee->getHistoDestruction() === null AND $conservee->getCompetence() === $competence) return true;
    }
    return false;
}

$array = [];
foreach ($competences as $competence)
    $array[$competence->getType()->getOrdre() . "_" . $competence->getType()->getId()][] = $competence;
?>

