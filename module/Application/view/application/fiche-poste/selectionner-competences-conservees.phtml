    action="<?php echo $this->url('fiche-poste/selectionner-competences-conservees', ['fiche-poste' => $ficheposte->getId(), 'fiche-metier' => $fichemetier->getId()], [], true); ?>"
    method="post"
>

<?php foreach ($array as $order => $competencesA) : ?>
