<?php

/**
 * @var FichePoste $ficheposte
 * @var FicheMetier $fichemetier
 * @var Formation[] $formations
 * @var FicheposteFormationRetiree[] $retirees
 */

use Application\Entity\Db\FicheMetier;
use Application\Entity\Db\FichePoste;
use Application\Entity\Db\FicheposteFormationRetiree;
use Application\Entity\Db\Formation;

/**
 * @param FicheposteFormationRetiree[] $retirees
 * @param Formation $formation
 * @return boolean
 */
function isIn($retirees, $formation) {
    foreach ($retirees as $retiree) {
        if ($retiree->getHistoDestruction() === null AND $retiree->getFormation() === $formation) return true;
    }
    return false;
}
?>

<form
    action="<?php echo $this->url('fiche-poste/selectionner-formations-retirees', ['fiche-poste' => $ficheposte->getId(), 'fiche-metier' => $fichemetier->getId()], [], true); ?>"
    method="post"
>

<?php foreach ($formations as $formation) : ?>
    <div class="checkbox">
        <label>
            <input
                    type="checkbox"
                    id="<?php echo $formation->getId(); ?>"
                    name="<?php echo $formation->getId(); ?>"
                    <?php if (! isIn($retirees, $formation)) echo "checked"; ?>
            />
            <?php echo $formation->getLibelle(); ?>
        </label>
    </div>
<?php endforeach; ?>

    <input type="submit" class="btn btn-primary action" value="Enregistrer"/>
</form>