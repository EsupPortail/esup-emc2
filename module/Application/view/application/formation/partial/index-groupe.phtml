    <div class="col-md-8">
        <h2>
            Groupes des formations
        </h2>
    </div>
    <div class="col-md-4">
        <?php if ($canAjouter) : ?>
            <br/>
            <a
                <?php /** @see FormationController::ajouterGroupeAction() */ ?>
                href="<?php echo $this->url('formation-groupe/ajouter', [], [], true); ?>"
                class="btn btn-primary action ajax-modal"
                data-event="modification">
                <span class="icon ajouter"></span>
                Ajouter un groupe
            </a>
        <?php endif; ?>
    </div>
</div>

