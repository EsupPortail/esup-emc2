            <td> <?php echo count($groupe->getFormations()); ?> </td>
            <td>
                <small>
                    <?php echo $groupe->getHistoModification()->format('d/m/Y à H:i'); ?>
                    <br/>
                    <?php echo $groupe->getHistoModificateur()->getDisplayName(); ?>
                </small>
            </td>
            <td>
                <?php if ($canAfficher) : ?>
                    <a  <?php /** @see FormationController::afficherGroupeAction() */ ?>
                        href="<?php echo $this->url('formation-groupe/afficher', ['formation-groupe' => $groupe->getId()], [], true); ?>"
                        class="ajax-modal">
                        <span class="icon voir" title="Afficher le groupe"></span></a>
                <?php else : ?>
                    <span class="icon voir" style="color:lightgrey;"></span>
                <?php endif; ?>
                <?php if ($canEditer) : ?>
                    <a
                        <?php /** @see FormationController::editerGroupeAction() */ ?>
                        href="<?php  echo $this->url('formation-groupe/editer', ['formation-groupe' => $groupe->getId()], [], true); ?>"
                        class="ajax-modal"
                        data-event="modification"
                    >
                        <span class="icon editer" title="Modifier le groupe"></span></a>
                <?php else : ?>
                    <span class="icon editer" style="color:lightgrey;"></span>
                <?php endif; ?>
                <?php if ($canHistoriser) : ?>
                    <?php if ($groupe->estNonHistorise()) : ?>
                        <a
                            <?php /** @see FormationController::historiserGroupeAction() */ ?>
                            href="<?php  echo $this->url('formation-groupe/historiser', ['formation-groupe' => $groupe->getId()], [], true); ?>"
                        >
                            <span class="icon historiser" title="Historiser le groupe"></span></a>
                    <?php else : ?>

                        <a
                            <?php /** @see FormationController::restaurerGroupeAction() */ ?>
                            href="<?php  echo $this->url('formation-groupe/restaurer', ['formation-groupe' => $groupe->getId()], [], true); ?>"
                        >
                            <span class="icon restaurer" title="Restaurer le groupe"></span></a>
                    <?php endif; ?>
                <?php else : ?>
                    <?php if ($groupe->estNonHistorise()) : ?>
                        <span class="icon historiser" style="color:lightgrey;"></span>
                    <?php else : ?>
                        <span class="icon restaurer" style="color:lightgrey;"></span>
                    <?php endif; ?>
                <?php endif; ?>
                <?php if ($canDetruire) : ?>
                    <a
                        <?php /** @see FormationController::detruireGroupeAction() */ ?>
                        href="<?php  echo $this->url('formation-groupe/detruire', ['formation-groupe' => $groupe->getId()], [], true); ?>"
                        class="ajax-modal" data-event="modification"
                    >
                        <span class="icon detruire" title="Afficher le groupe"></span></a>
                <?php else : ?>
                    <span class="icon detruire" style="color:lightgrey;"></span>
                <?php endif; ?>
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>

<script>
    $(function() {
        //let mode = <?php //echo "'".$mode."'"; ?>//;
        // console.log(mode);
        //if (<?php //echo "'".$mode."'"; ?>// === 'modifier-activite') {
            $('table#groupes tbody').sortable({
                update: function( event, ui ) {
                    let ordre = "";
                    $('table#groupes tbody tr').each(function () {
                        if (ordre !== "") ordre += "_";
                        ordre += $(this)[0].id ;
                    });
                    // console.log(ordre);
                    <?php /** @see \Application\Controller\FormationController::updateOrdreGroupeAction() */ ?>
                    let url = '../formation-groupe/update-ordre-groupe/' + ordre;
//                    // console.log(url);
                   $.ajax({
                       type: "POST",
                       url: url,
                       beforeSend:
                           function () {
                               $( "table#groupes tbody" ).sortable( "option", "disabled", true );
                           },
                       success:
                           function (retour) {
                               $( "table#groupes tbody" ).sortable( "option", "disabled", false );
                           }
                   });
                }
            });
            $('table#groupes tbody').disableSelection();
        // }
    });
</script>