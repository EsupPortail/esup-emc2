<?php

use Application\Entity\Db\Activite;

/**
 * @var Activite $activite
 */

$applications   = $activite->getApplications();
$competences    = $activite->getCompetences();
$formations      = $activite->getFormations();
?>

<div class="activite">

<h3>
    <?php echo $activite->getLibelle(); ?>
</h3>

<div>
    <?php echo $activite->getDescription(); ?>
</div>

<?php if (!empty($applications)) : ?>
    <h3>
        Applications métiers associées
        <span class="badge">
            <?php echo count($applications); ?>
        </span>
    </h3>

    <ul>
        <?php foreach ($applications as $application) : ?>
            <li><?php echo $application->getLibelle(); ?></li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>

<?php if (!empty($competences)) : ?>
    <h3>
        Compétences associées
        <span class="badge">
        <?php echo count($competences); ?>
    </span>
    </h3>

    <ul>
        <?php foreach ($competences as $competence) : ?>
            <li><?php echo $competence->getLibelle(); ?></li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>

<?php if (!empty($formations)) : ?>
    <h3>
        Formations associées
        <span class="badge">
        <?php echo count($formations); ?>
    </span>
    </h3>

    <ul>
        <?php foreach ($formations as $formation) : ?>
            <li><?php echo $formation->getLibelle(); ?></li>
        <?php endforeach; ?>
    </ul>
<?php endif; ?>
</div>