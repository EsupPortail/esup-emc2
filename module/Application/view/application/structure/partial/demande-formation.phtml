</div>

<div class="row">
    <div class="col-md-6">

    <h2> Demandes de formations </h2>

    <?php
    $attentes = array_filter(
            $inscriptions,
            function (FormationInstanceInscrit $inscription) { return ($inscription->getEtat() !== null AND $inscription->getEtat()->getCode() === FormationInstanceInscrit::ETAT_DEMANDE_INSCRIPTION);}
            );
    ?>
    <?php usort($attentes, function ($a,$b) { return $a['formation']->getLibelle() > $b['formation']->getLibelle();}); ?>
    <?php foreach ($array as $item) : ?>
        <h3> <?php echo $item['formation']->getLibelle(); ?> </h3>

        <?php foreach($item['instances'] as $instance) : ?>
