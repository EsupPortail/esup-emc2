                            <span class="icon historiser" title="Historiser la famille professionnelle"></span></a>
                    <?php else : ?>
                        <a  <?php /** @see \Application\Controller\FamilleProfessionnelleController::restaurerAction() */ ?>
                            href="<?php echo $this->url('famille-professionnelle/restaurer', ['famille-professionnelle' => $famille->getId()], [], true); ?>"
                        >
                            <span class="icon restaurer" title="Restaurer la famille professionnelle"></span></a>
                    <?php endif; ?>
                <?php endif; ?>
                <?php if ($canEffacer) : ?>
                    <a
                        <?php /** @see \Application\Controller\FamilleProfessionnelleController::effacerAction() */?>
                        href="<?php echo $this->url('famille-professionnelle/effacer', ['famille-professionnelle' => $famille->getId()], [], true); ?>"
