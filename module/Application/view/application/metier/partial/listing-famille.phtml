                <?php echo count($famille->getDomaines()); ?>
            </td>
            <td>
                <?php if ($canEditer) : ?>
                    <a
                        <?php /** @see \Application\Controller\FamilleProfessionnelleController::modifierAction() */?>
                        href="<?php echo $this->url('famille-professionnelle/modifier', ['famille-professionnelle' => $famille->getId()], [], true); ?>"
                        class="ajax-modal"
                        data-event="modification"
                    >
                        <span class="icon editer" title="Modifier la famille professionnelle"></span></a>
                <?php endif; ?>
                <?php if ($canHistoriser) : ?>
                    <?php if ($famille->estNonHistorise()) : ?>
                        <a  <?php /** @see \Application\Controller\FamilleProfessionnelleController::historiserAction() */ ?>
                            href="<?php echo $this->url('famille-professionnelle/historiser', ['famille-professionnelle' => $famille->getId()], [], true); ?>"
