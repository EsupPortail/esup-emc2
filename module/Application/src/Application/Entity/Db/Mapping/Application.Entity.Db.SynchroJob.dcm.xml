<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Application\Entity\Db\SynchroJob" table="synchro_job">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="url"          type="string" length="1024"      column="url"                    nullable="false"/>
        <field name="key"          type="string" length="1024"      column="key"                    nullable="false"/>
        <field name="entityClass"  type="string" length="1024"      column="class"                  nullable="false"/>
        <field name="table"        type="string" length="1024"      column="table"                  nullable="false"/>
        <field name="description"  type="string" length="4096"      column="description"            nullable="true"/>
        <field name="wsAttributes" type="string" length="4096"      column="ws_attributes"          nullable="true"/>
        <field name="dbAttributes" type="string" length="4096"      column="db_attributes"          nullable="true"/>
        <field name="enAttributes" type="string" length="4096"      column="en_attributes"          nullable="true"/>

        <one-to-many target-entity="Application\Entity\Db\SynchroLog" mapped-by="job" field="logs"/>
    </entity>
</doctrine-mapping>
