<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Application\Entity\Db\Application" table="application_informations">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="libelle"           type="string"   length="128"      column="libelle"                nullable="false"  />
        <field name="description"       type="string"   length="2048"     column="description"            nullable="true"   />
        <field name="url"               type="string"   length="128"      column="url"                    nullable="false"  />
        <field name="actif"             type="boolean"                    column="actif"                  nullable="false"  />

        <many-to-many field="activites" target-entity="Application\Entity\Db\Activite" inversed-by="activite" fetch="LAZY">
            <join-table name="activite_application">
                <join-columns>
                    <join-column name="application_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="activite_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-one target-entity="Application\Entity\Db\ApplicationGroupe"  field="groupe">
            <join-column name="groupe_id" referenced-column-name="id"/>
        </many-to-one>

        <many-to-many field="formations" target-entity="Formation\Entity\Db\Formation" inversed-by="formation" fetch="LAZY">
            <join-table name="application_formation">
                <join-columns>
                    <join-column name="application_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="formation_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>
</doctrine-mapping>
