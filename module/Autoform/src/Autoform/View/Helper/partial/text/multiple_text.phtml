<?php
/**
 * @var Champ $champ
 * @var string $data
 */

use Autoform\Entity\Db\Champ;

?>
<?php if ($data !== null && $data != '') : ?>
    <?php $splits = explode(";", (string) $data); ?>
    <?php echo $champ->getLibelle(); ?>&nbsp;:
    <?php echo $libelles = explode(';',$champ->getOptions()); ?>
    <?php $size = max(count($libelles), count($splits)); ?>
    <ul>
        <?php for($position = 0 ; $position < $size ; $position ++) : ?>
            <li>
                <?php echo $libelles[$position] ?> :
                <?php
                    $resplits = str_replace("_"," ",substr($splits[$position],3));
                    echo $resplits;
                ?>
            </li>
        <?php endfor; ?>
    </ul>
<?php endif; ?>
