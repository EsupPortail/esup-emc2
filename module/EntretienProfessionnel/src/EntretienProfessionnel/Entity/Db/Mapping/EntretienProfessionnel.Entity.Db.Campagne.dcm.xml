<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="EntretienProfessionnel\Entity\Db\Campagne" table="entretienprofessionnel_campagne">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="annee" column="annee" length="256"/>
        <field name="dateDebut" column="date_debut" type="datetime"/>
        <field name="dateFin" column="date_fin" type="datetime"/>
        <field name="dateCirculaire" column="date_circulaire" type="datetime"/>
        <field name="dateEnPoste" column="date_en_poste" type="datetime" nullable="true"/>

        <many-to-one target-entity="EntretienProfessionnel\Entity\Db\Campagne" field="precede">
            <join-column name="precede_id"/>
        </many-to-one>

        <many-to-one target-entity="UnicaenAutoform\Entity\Db\Formulaire" field="formulaireCREP">
            <join-column name="formulaire_crep_id"/>
        </many-to-one>
        <many-to-one target-entity="UnicaenAutoform\Entity\Db\Formulaire" field="formulaireCREF">
            <join-column name="formulaire_cref_id"/>
        </many-to-one>

        <one-to-many target-entity="EntretienProfessionnel\Entity\Db\EntretienProfessionnel" mapped-by="campagne" field="entretiens"/>

        <many-to-many field="indicateurs" target-entity="UnicaenIndicateur\Entity\Db\Indicateur">
            <join-table name="entretienprofessionnel_campagne_indicateur">
                <join-columns>
                    <join-column name="campagne_id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="indicateur_id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <!-- HISTORISATION ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <field name="histoCreation" type="datetime" column="histo_creation"/>
        <field name="histoModification" type="datetime" column="histo_modification"/>
        <field name="histoDestruction" type="datetime" column="histo_destruction" nullable="true"/>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User" field="histoCreateur">
            <join-column name="histo_createur_id" referenced-column-name="ID"/>
        </many-to-one>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User" field="histoModificateur">
            <join-column name="histo_modificateur_id" referenced-column-name="ID"/>
        </many-to-one>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User" field="histoDestructeur">
            <join-column name="histo_destructeur_id" referenced-column-name="ID"/>
        </many-to-one>

    </entity>
</doctrine-mapping>
