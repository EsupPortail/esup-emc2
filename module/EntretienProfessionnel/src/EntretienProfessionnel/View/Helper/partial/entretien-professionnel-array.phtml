            <?php if ($dropdowns) : ?>
                <div class="dropdown action-dd">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" onclick="setActions(<?php echo $entretien->getId(); ?>)">
                        <span class="icon actions" title="Actions possible pour l'entretien #<?php echo $entretien->getId(); ?>"></span>
                    </button>
                    <ul id="drop_<?php echo $entretien->getId(); ?>" class="dropdown-menu" aria-labelledby="dropdownMenu1">
                    </ul>
                </div>
            <?php endif; ?>
        </td>
        <?php endif; ?>
    </tr>
    <?php endforeach; ?>
    </tbody>
</table>

<style>
    div.action-dd button {
        border: none;
