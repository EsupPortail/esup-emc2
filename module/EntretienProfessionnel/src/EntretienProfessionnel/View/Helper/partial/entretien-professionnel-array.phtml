if (isset($options['affichages']) AND isset($options['affichages']['action']))      $displayAction = $options['affichages']['action'];

// recuperation des droits pour les actions
$canExporter  = false;
if (!isset($options['droits']) OR !isset($options['droits']['exporter'])) {
    $canExporter = $this->isAllowed(EntretienproPrivileges::getResourceId(EntretienproPrivileges::ENTRETIENPRO_AFFICHER));
} else {
    $canExporter = $options['droits']['exporter'];
}
$canModifier  = false;
if (!isset($options['droits']) OR !isset($options['droits']['modifier'])) {
    $canModifier = $this->isAllowed(EntretienproPrivileges::getResourceId(EntretienproPrivileges::ENTRETIENPRO_MODIFIER));
} else {
    $canModifier = $options['droits']['modifier'];
}
$canSursis  = false;
if (!isset($options['droits']) OR !isset($options['droits']['sursis'])) {
    $canSursis = $this->isAllowed(SursisPrivileges::getResourceId(SursisPrivileges::SURSIS_MODIFIER));
} else {
    $canSursis = $options['droits']['sursis'];
}
$canRenseigner  = false;
if (!isset($options['droits']) OR !isset($options['droits']['renseigner'])) {
    $canRenseigner = $this->isAllowed(EntretienproPrivileges::getResourceId(EntretienproPrivileges::ENTRETIENPRO_MODIFIER));
} else {
    $canRenseigner = $options['droits']['renseigner'];
}
$canHistoriser  = false;
if (!isset($options['droits']) OR !isset($options['droits']['historiser'])) {
    $canHistoriser = $this->isAllowed(EntretienproPrivileges::getResourceId(EntretienproPrivileges::ENTRETIENPRO_HISTORISER));
} else {
    $canHistoriser = $options['droits']['historiser'];
}
$canSupprimer  = false;
if (!isset($options['droits']) OR !isset($options['droits']['supprimer'])) {
    $canSupprimer = $this->isAllowed(EntretienproPrivileges::getResourceId(EntretienproPrivileges::ENTRETIENPRO_DETRUIRE));
} else {
    $canSupprimer = $options['droits']['supprimer'];
}

?>

<table class="table table-condensed table-hover" style="margin:1rem 0;">
    <thead>
    <tr>
        <?php if ($displayAnnee) : ?>
            <th style="min-width:9rem;"> Année </th>
        <?php endif; ?>
        <?php if ($displayStructure) : ?>
            <th> Structure </th>
        <?php endif; ?>
        <?php if ($displayAgent) : ?>
            <th> Agent </th>
        <?php endif; ?>
        <?php if ($displayResponsable) : ?>
            <th> Responsable </th>
        <?php endif; ?>
        <?php if ($displayDate) : ?>
            <th style="width:13rem;"> Date</th>
        <?php endif; ?>
        <?php if ($displayLieu) : ?>
            <th> Lieu</th>
        <?php endif; ?>
        <?php if ($displayEtat) : ?>
            <th style="min-width:9rem;"> État </th>
        <?php endif; ?>
        <?php if ($displayAction) : ?>
        <?php if (!$dropdowns) : ?>
            <th style="min-width:22rem;"> Action </th>
        <?php else : ?>
                <th style="min-width:6rem;"> Action </th>
        <?php endif; ?>
        <?php endif; ?>
    </tr>
    </thead>
    <tbody>
    <?php foreach ($entretiens as $entretien) : ?>
    <tr>
        <?php if ($displayAnnee) : ?>
            <td> <?php echo $entretien->getCampagne()->getAnnee(); ?> </td>
        <?php endif; ?>
        <?php if ($displayStructure) : ?>
            <td>
                <?php $affectations = $entretien->getAgent()->getAffectations($entretien->getDateEntretien()); ?>
                <?php if ($affectations !== null and !empty($affectations)) : ?>
                    <?php $first = true; ?>
                    <?php foreach ($affectations as $affectation) : ?>
                        <?php if (!$first) echo '<br/>'; else $first = false; ?>
                        <?php echo $affectation->getStructure()->getLibelleCourt(); ?>
                    <?php endforeach; ?>
                <?php else : ?>
                    Aucune structure
                <?php endif; ?>
            </td>
        <?php endif; ?>
        <?php if ($displayAgent) : ?>
            <td> <?php echo $entretien->getAgent()->getDenomination(); ?> </td>
        <?php endif; ?>
        <?php if ($displayResponsable) : ?>
            <td> <?php echo $entretien->getResponsable()->getDenomination(); ?> </td>
        <?php endif; ?>
        <?php if ($displayDate) : ?>
            <td>
                <?php if ($sursis = $entretien->getSursisActif()) : ?>
                    <i><?php echo $entretien->getSursisActif()->getSursis()->format('d/m/Y H:i'); ?></i>
