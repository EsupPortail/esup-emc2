<script>
    function setActions(id) {
        let url = '../../entretien-professionnel/action/' + id;
        // console.log(url);
        $.ajax({
            type: "POST",
            url: url,
            beforeSend:
                function () {
                    // console.log(retour);
                    $("ul#drop_"+id).html("<center><span class='icon hourglass'></span> Calcul en cours</center>");
                },
            success:
                function (retour) {
                    // console.log(retour);
                    $("ul#drop_"+id).html(retour);
                }
        });
        // alert(ficheId);
    }
</script>
