                    <?php echo $entretien->getDateEntretien()->format('d/m/Y H:i'); ?>
                <?php endif; ?>
            </td>
        <?php endif; ?>
        <?php if ($displayLieu) : ?>
            <td> <?php echo $entretien->getLieu(); ?> </td>
        <?php endif; ?>
        <?php if ($displayEtat) : ?>
            <td> <?php echo $this->etatbadge($entretien->getEtat()); ?> </td>
        <?php endif; ?>
        <?php if ($displayAction) : ?>
        <td>
            <?php if ($this->isAllowed($entretien, EntretienproPrivileges::ENTRETIENPRO_EXPORTER)  and !$dropdowns) : ?>
                <a
                    <?php /** @see \EntretienProfessionnel\Controller\EntretienProfessionnelController::exporterCrepAction() */?>
                    href="<?php echo $this->url('entretien-professionnel/exporter-crep', ['entretien' => $entretien->getId()], [], true) ?>"
                >
                    <span class="icon pdf" title="Exporter le compte-rendu d'entretien professionnel ">
                        <span class="small-lettrine">CREP</span></a>
                <a
                    <?php /** @see \EntretienProfessionnel\Controller\EntretienProfessionnelController::exporterCrefAction() */?>
                        href="<?php echo $this->url('entretien-professionnel/exporter-cref', ['entretien' => $entretien->getId()], [], true) ?>"
                >
                    <span class="icon pdf" title="Exporter  le compte-rendu d'entretien de formation">
                        <span class="small-lettrine">CREF</span></a>
            <?php endif; ?>
            <?php if ($this->isAllowed($entretien, EntretienproPrivileges::ENTRETIENPRO_MODIFIER)  and !$dropdowns and !$dropdowns) : ?>
                <a
                    <?php /** @see \EntretienProfessionnel\Controller\EntretienProfessionnelController::accederAction() */?>
                    href="<?php echo $this->url('entretien-professionnel/acceder', ['entretien' => $entretien->getId()], [], true) ?>"
                >
                    <span class="icon editer" title="Accéder à l'entretien professionnel"></a>
            <?php endif; ?>
            <?php if ($canModifier  and !$dropdowns) : ?>
                <a
                    <?php /** @see \EntretienProfessionnel\Controller\EntretienProfessionnelController::modifierAction() */?>
                    href="<?php echo $this->url('entretien-professionnel/modifier', ['entretien' => $entretien->getId()], [], true); ?>"
                    class="ajax-modal" data-event="modification"
                >
                    <span class="icon gerer" title="Modifier l'entretien professionnel (convocation)"></span></a>
                <?php if ($canSursis and !$dropdowns) : ?>
                    <a      <?php /** @see \EntretienProfessionnel\Controller\SursisController::modifierAction() */ ?>
                            href="<?php
                                if ($entretien->getSursisActif())
                                    echo $this->url('entretien-professionnel/sursis/modifier', ['sursis' => $entretien->getSursisActif()->getId()], [], true);
                                else
                                    echo $this->url('entretien-professionnel/sursis/ajouter', ['entretien-professionnel' => $entretien->getId()], [], true);
                            ?>"
                            class="ajax-modal" data-event="modification"
                    >
                        <span class="icon sursis"></span></a>
                <?php endif; ?>
            <?php endif; ?>
            <?php if ($canHistoriser  and !$dropdowns) : ?>
                <?php if ($entretien->estNonHistorise()) : ?>
                    <a
                        <?php /** @see \EntretienProfessionnel\Controller\EntretienProfessionnelController::historiserAction() */?>
                        href="<?php echo $this->url('entretien-professionnel/historiser', ['entretien' => $entretien->getId()], [], true); ?>"
                    >
                        <span class="icon historiser" title="Historiser le compte-rendu de l'entretien professionnel"></span></a>
                <?php else : ?>
                    <a
                        <?php /** @see \EntretienProfessionnel\Controller\EntretienProfessionnelController::restaurerAction() */?>
                        href="<?php echo $this->url('entretien-professionnel/restaurer', ['entretien' => $entretien->getId()], [], true); ?>"
                    >
                        <span class="icon restaurer" title="Restaurer le compte-rendu de l'entretien professionnel"></span></a>
                <?php endif; ?>
            <?php endif; ?>

            <?php if ($canSupprimer and !$dropdowns) : ?>
                <a
                    <?php /** @see \EntretienProfessionnel\Controller\EntretienProfessionnelController::detruireAction() */?>
                    href="<?php echo $this->url('entretien-professionnel/detruire', ['entretien' => $entretien->getId()], [], true); ?>"
                    class="ajax-modal"
                    data-event="modification"
                >
                    <span class="icon detruire" title="Supprimer définitivement le compte-rendu de l'entretien professionnel"></span></a>
