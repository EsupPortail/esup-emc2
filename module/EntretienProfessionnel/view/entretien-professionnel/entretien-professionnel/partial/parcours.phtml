    <div class="col-md-10">
        <?php if ($parcours !== null AND !empty($parcours)) : ?>
            <?php
            $arrays = $parcours;
            ksort($arrays);
            foreach ( $arrays as $type => $array) : ?>
                <?php $parcours = $array; ?>
