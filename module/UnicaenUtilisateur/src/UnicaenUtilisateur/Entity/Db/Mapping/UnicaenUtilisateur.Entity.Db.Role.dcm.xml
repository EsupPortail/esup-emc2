<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="UnicaenUtilisateur\Entity\Db\Role" table="unicaen_utilisateur_role">

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <field name="roleId" type="string" column="role_id" length="64" nullable="false"/>
    <field name="libelle" type="string" column="libelle" length="64" nullable="false"/>
    <field name="isDefault" type="boolean" column="is_default" nullable="false"/>
    <field name="ldapFilter" type="string" column="ldap_filter" length="255" nullable="true"/>

    <many-to-many field="users" target-entity="UnicaenUtilisateur\Entity\Db\User" inversed-by="roles" fetch="LAZY">
      <join-table name="unicaen_utilisateur_role_linker">
        <join-columns>
          <join-column name="role_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="user_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>

    <many-to-many field="privilege" target-entity="UnicaenPrivilege\Entity\Db\Privilege" inversed-by="role" fetch="LAZY">
      <join-table name="unicaen_utilisateur_privilege_linker">
        <join-columns>
          <join-column name="role_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="privilege_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>

  </entity>
</doctrine-mapping>
