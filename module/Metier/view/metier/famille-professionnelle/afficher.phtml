    <dt class="col-md-4"> Métier·s</dt>
    <dd class="col-md-8">
        <?php if (empty($metiers)) : ?>
            <em> Aucun métier d'associé à cette famille professionnelle </em>
        <?php else : ?>
            <ul>
                <?php foreach ($metiers as $metier) : ?>
                    <li> <?php echo $metier->getLibelle(); ?> </li>
                <?php endforeach; ?>
            </ul>
        <?php endif; ?>
    </dd>
