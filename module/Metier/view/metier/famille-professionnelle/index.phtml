                    <a
                        <?php /** @see \Metier\Controller\FamilleProfessionnelleController::afficherAction() */?>
                            href="<?php echo $this->url('famille-professionnelle/afficher', ['famille-professionnelle' => $famille->getId()], [], true); ?>"
