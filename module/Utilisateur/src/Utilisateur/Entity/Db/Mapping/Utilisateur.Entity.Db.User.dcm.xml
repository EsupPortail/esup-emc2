<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Utilisateur\Entity\Db\User" table="`user`">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <field name="username"      type="string" length="255"      column="username"       nullable="false"/>
    <field name="displayName"   type="string" length="64"       column="display_name"   nullable="false"/>
    <field name="email"         type="string" length="255"      column="email"          nullable="true"/>
    <field name="password"      type="string" length="128"      column="password"       nullable="false"/>
    <field name="state"         type="boolean"                  column="state"          nullable="false"/>

    <many-to-many field="roles" target-entity="Utilisateur\Entity\Db\Role" mapped-by="users" fetch="LAZY"/>

    <many-to-many field="structures" target-entity="Application\Entity\Db\Structure" inversed-by="structure" fetch="LAZY">
      <join-table name="structure_gestionnaire">
        <join-columns>
          <join-column name="utilisateur_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="structure_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>

  </entity>
</doctrine-mapping>
