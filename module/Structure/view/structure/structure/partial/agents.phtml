            <!-- ACTION ----------------------------------------------------------------------------------------------->
            <td class="action">
                <?php if ($canVoirAgent) : ?>
                    <a
                        <?php /** @see \Application\Controller\AgentController::afficherAction() */ ?>
                            href="<?php echo $this->url('agent/afficher', ['agent' => $agent->getId()], [], true); ?>"
                            target="_blank" class="action secondary"
                    >
                        <span class="icon icon-voir"></span>
                        Afficher
                    </a>
