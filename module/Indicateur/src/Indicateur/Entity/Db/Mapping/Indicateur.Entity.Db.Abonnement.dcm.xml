<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Indicateur\Entity\Db\Abonnement" table="indicateur_abonnement">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User"  field="user">
            <join-column name="user_id" referenced-column-name="ID"/>
        </many-to-one>

        <many-to-one target-entity="Indicateur\Entity\Db\Indicateur"  field="indicateur">
            <join-column name="indicateur_id" referenced-column-name="id"/>
        </many-to-one>

        <field name="frequence"         type="string" length="255"      column="frequence"              nullable="false"/>
        <field name="dernierEnvoi"      type="datetime"                 column="dernier_envoi"          nullable="true"/>
    </entity>
</doctrine-mapping>
