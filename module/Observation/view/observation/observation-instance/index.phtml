<?php

use Observation\Entity\Db\ObservationInstance;
use Observation\Provider\Privilege\ObservationinstancePrivileges;

/**
 * @see \Observation\Controller\ObservationInstanceController::indexAction()
 * @var ObservationInstance[] $observations
 * @var array $params
 */

$this->headTitle("Instance d'observation");

$canAfficher = $this->isAllowed(ObservationinstancePrivileges::getResourceId(ObservationinstancePrivileges::OBSERVATIONINSTANCE_AFFICHER));
$canAjouter = $this->isAllowed(ObservationinstancePrivileges::getResourceId(ObservationinstancePrivileges::OBSERVATIONINSTANCE_AJOUTER));
$canModifier = $this->isAllowed(ObservationinstancePrivileges::getResourceId(ObservationinstancePrivileges::OBSERVATIONINSTANCE_MODIFIER));
$canHistoriser = $this->isAllowed(ObservationinstancePrivileges::getResourceId(ObservationinstancePrivileges::OBSERVATIONINSTANCE_HISTORISER));
$canSupprimer = $this->isAllowed(ObservationinstancePrivileges::getResourceId(ObservationinstancePrivileges::OBSERVATIONINSTANCE_SUPPRIMER));

?>

<h1 class="page-header">
    Instances d'observation
</h1>

<div class='filtes'>
    <?php echo $this->partial('partial/filtre.phtml'); ?>
</div>

<div id="actions-generales">
    <?php if ($canAjouter): ?>
        <?php /** @see \Observation\Controller\ObservationInstanceController::ajouterAction() */ ?>
        <a href="<?php echo $this->url('observation/instance/ajouter'); ?>"
           class="btn btn-primary ajax-modal" data-event="modification">
            <span class="icon icon-ajouter"></span>
            Ajouter une instance d'observation
        </a>
    <?php endif; ?>
</div>

<table class="table table-condensed datatable">
    <thead>
    <tr>
        <th> Type </th>
        <th> Observation</th>
        <th class="action"> Action</th>
    </tr>
    </thead>
    <tbody>
    <?php foreach ($observations as $instance) : ?>
        <tr class="<?php if ($instance->estHistorise()) echo " historise "; ?>">
            <td>
                <?php echo $instance->getType()->getCode(); ?>
                <br>
                <?php echo $instance->getType()->getLibelle(); ?>
            </td>
            <td>
                <?php echo $instance->getObservation(); ?>
            </td>
            <td class="action">
                <?php if ($canAfficher) : ?>
                    <?php /** @see \Observation\Controller\ObservationInstanceController::afficherAction() */ ?>
                    <a href="<?php echo $this->url('observation/instance/afficher', ['observation-instance' => $instance->getId()], [], true); ?>"
                       class="ajax-modal">
                        <span class="icon icon-voir"></span>
                        Afficher
                    </a>
                <?php endif; ?>
                <?php if ($canModifier) : ?>
                    <br>
                    <?php /** @see \Observation\Controller\ObservationInstanceController::modifierAction() */ ?>
                    <a href="<?php echo $this->url('observation/instance/modifier', ['observation-instance' => $instance->getId()], [], true); ?>"
                       class="ajax-modal" data-event="modification">
                        <span class="icon icon-modifier"></span>
                        Modifier
                    </a>
                <?php endif; ?>
                <?php if ($canHistoriser) : ?>
                    <br>
                    <?php if ($instance->estNonHistorise()) : ?>
                        <?php /** @see \Observation\Controller\ObservationInstanceController::historiserAction() */ ?>
                        <a href="<?php echo $this->url('observation/instance/historiser', ['observation-instance' => $instance->getId()], [], true); ?>"
                        >
                            <span class="icon icon-historiser"></span>
                            Historiser
                        </a>
                    <?php else : ?>
                        <?php /** @see \Observation\Controller\ObservationInstanceController::restaurerAction() */ ?>
                        <a href="<?php echo $this->url('observation/instance/restaurer', ['observation-instance' => $instance->getId()], [], true); ?>"
                        >
                            <span class="icon icon-restaurer"></span>
                            Restaurer
                        </a>
                    <?php endif; ?>
                <?php endif; ?>
                <?php if ($canSupprimer) : ?>
                    <br>
                    <?php /** @see \Observation\Controller\ObservationInstanceController::restaurerAction() */ ?>
                    <a href="<?php echo $this->url('observation/instance/supprimer', ['observation-instance' => $instance->getId()], [], true); ?>"
                       class="ajax-modal" data-event="modification">
                        <span class="text-danger">
                            <span class="icon icon-unchecked"></span>
                            Supprimer
                        </span>
                    </a>
                <?php endif; ?>
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>

<script>
    $(function () {
        $("body").on("modification", function (event) {
            event.div.modal('hide');
            window.location.reload();
        });
    });
</script>
