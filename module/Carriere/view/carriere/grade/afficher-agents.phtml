<script>
    $('tr.historise').hide();
    $('#actif_only').on('change', function() {
        let val = $('#actif_only').is(':checked');
        if (val === true) $('tr.historise').hide(); else $('tr.historise').show();
    });

    $('a.linkexterne').on('click',function(e) {
        e.preventDefault();
        $('.modal').modal("hide");
        window.location = 'agent/afficher/' + $(this).attr('id');
    });
