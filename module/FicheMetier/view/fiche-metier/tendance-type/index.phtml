            <td class="action">
                <?php if ($canAfficher) : ?>
                    <?php /** @see \FicheMetier\Controller\TendanceTypeController::afficherAction() */ ?>
                    <a href="<?php echo $this->url('fiche-metier/tendance-type/afficher', ['tendance-type' => $tendanceType->getId()], [], true); ?>"
                       class="ajax-modal action secondary"
                    >
                        <span class="icon icon-voir"></span>
                        Afficher
                    </a>
                <?php endif; ?>
                <?php if ($canModifier) : ?>
                    <br>
                    <?php /** @see \FicheMetier\Controller\TendanceTypeController::modifierAction() */ ?>
                    <a href="<?php echo $this->url('fiche-metier/tendance-type/modifier', ['tendance-type' => $tendanceType->getId()], [], true); ?>"
                       class="ajax-modal action primary" data-event="modification"
                    >
                        <span class="icon icon-modifier"></span>
                        Modifier
                    </a>
                <?php endif; ?>
                <?php if ($canHistoriser) : ?>
                    <br>
                    <?php if ($tendanceType->estNonHistorise()) : ?>
                        <?php /** @see \FicheMetier\Controller\TendanceTypeController::historiserAction() */ ?>
                        <a href="<?php echo $this->url('fiche-metier/tendance-type/historiser', ['tendance-type' => $tendanceType->getId()], [], true); ?>"
                           class="action warning"
                        >
                            <span class="icon icon-historiser"></span>
