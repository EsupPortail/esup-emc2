$this->headTitle("Type de tendances");

$canAfficher = $this->isAllowed(TendancetypePrivileges::getResourceId(TendancetypePrivileges::TENDANCETYPE_AFFICHER));
$canAjouter  = $this->isAllowed(TendancetypePrivileges::getResourceId(TendancetypePrivileges::TENDANCETYPE_AJOUTER));
