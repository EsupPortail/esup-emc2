<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping>
    <entity name="FicheMetier\Entity\Db\Mission" table="missionprincipale">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="libelle" type="string" length="1024" column="libelle"/>
        <field name="codesFicheMetier" type="text" column="codes_fiche_metier"/>
        <field name="codesFonction" type="text" column="codes_fonction"/>

        <many-to-one target-entity="Carriere\Entity\Db\NiveauEnveloppe"  field="niveau">
            <join-column name="niveau_id" referenced-column-name="id"/>
        </many-to-one>

        <many-to-many field="famillesProfessionnelles" target-entity="Metier\Entity\Db\FamilleProfessionnelle">
            <join-table name="missionprincipale_familleprofessionnelle">
                <join-columns>
                    <join-column name="mission_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="famille_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many target-entity="FicheMetier\Entity\Db\MissionActivite" mapped-by="mission" field="activites"/>
        <one-to-many target-entity="FicheMetier\Entity\Db\FicheMetierMission" mapped-by="mission" field="listeFicheMetierMission"/>
        <one-to-many target-entity="FichePoste\Entity\Db\MissionAdditionnelle" mapped-by="mission" field="listeFichePosteMission"/>

        <field name="sourceString" type="text" column="source_string"/>

        <!-- HAS REFERENCE ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <many-to-one target-entity="Referentiel\Entity\Db\Referentiel"  field="referentiel">
            <join-column name="referentiel_id" referenced-column-name="id"/>
        </many-to-one>
        <field name="reference" length="256" column="reference"/>

        <!-- HISTO ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <field name="histoCreation"     type="datetime"                 column="histo_creation"     nullable="false"/>
        <field name="histoModification" type="datetime"                 column="histo_modification" nullable="false"/>
        <field name="histoDestruction"  type="datetime"                 column="histo_destruction"  nullable="true"/>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User"  field="histoCreateur">
            <join-column name="histo_createur_id" referenced-column-name="ID"/>
        </many-to-one>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User"  field="histoModificateur">
            <join-column name="histo_modificateur_id" referenced-column-name="ID"/>
        </many-to-one>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User"  field="histoDestructeur">
            <join-column name="histo_destructeur_id" referenced-column-name="ID"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
