<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping>
    <entity name="FicheMetier\Entity\Db\FicheMetier" table="fichemetier">

        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <many-to-one target-entity="Metier\Entity\Db\Metier" field="metier">
            <join-column name="metier_id" referenced-column-name="id"/>
        </many-to-one>

        <many-to-many field="etats" target-entity="UnicaenEtat\Entity\Db\EtatInstance">
            <join-table name="fichemetier_etat">
                <join-columns>
                    <join-column name="fichemetier_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="etat_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="applications" target-entity="Element\Entity\Db\ApplicationElement">
            <join-table name="fichemetier_application">
                <join-columns>
                    <join-column name="fichemetier_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="application_element_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="competences" target-entity="Element\Entity\Db\CompetenceElement">
            <join-table name="fichemetier_competence">
                <join-columns>
                    <join-column name="fichemetier_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="competence_element_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many target-entity="FicheMetier\Entity\Db\FicheMetierMission" mapped-by="ficheMetier" field="missions"/>
        <one-to-many target-entity="FicheMetier\Entity\Db\ThematiqueElement" mapped-by="ficheMetier" field="thematiques"/>
        <one-to-many target-entity="FicheMetier\Entity\Db\TendanceElement" mapped-by="ficheMetier" field="tendances"/>


        <field name="libelle" length="10124" column="libelle" nullable="true"/>
        <many-to-one target-entity="Metier\Entity\Db\FamilleProfessionnelle" field="familleProfessionnelle">
            <join-column name="famille_id" referenced-column-name="id"/>
        </many-to-one>

        <field name="hasExpertise" type="boolean" column="expertise" nullable="true"/>
        <field name="raison" type="text" column="raison" nullable="true"/>

        <many-to-one target-entity="FicheMetier\Entity\Db\CodeFonction" field="codeFonction">
            <join-column name="code_fonction_id" referenced-column-name="id"/>
        </many-to-one>

        <one-to-many target-entity="FicheMetier\Entity\Db\CodeEmploiType" mapped-by="fichemetier" field="codesEmploiType"/>

        <field name="raw" type="text" column="raw" nullable="true"/>

        <!-- HAS REFERENCE ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <many-to-one target-entity="Referentiel\Entity\Db\Referentiel"  field="referentiel">
            <join-column name="referentiel_id" referenced-column-name="id"/>
        </many-to-one>
        <field name="reference" length="256" column="reference"/>

        <!-- Historisation ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <field name="histoCreation" type="datetime" column="histo_creation" nullable="false"/>
        <field name="histoModification" type="datetime" column="histo_modification" nullable="false"/>
        <field name="histoDestruction" type="datetime" column="histo_destruction" nullable="true"/>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User" field="histoCreateur">
            <join-column name="histo_createur_id" referenced-column-name="ID"/>
        </many-to-one>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User" field="histoModificateur">
            <join-column name="histo_modificateur_id" referenced-column-name="ID"/>
        </many-to-one>
        <many-to-one target-entity="UnicaenUtilisateur\Entity\Db\User" field="histoDestructeur">
            <join-column name="histo_destructeur_id" referenced-column-name="ID"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
